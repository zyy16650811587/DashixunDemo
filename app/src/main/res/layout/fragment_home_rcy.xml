<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/home_recycler_img"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/home_recycler_text"
        app:layout_constraintLeft_toLeftOf="@id/home_recycler_img"
        app:layout_constraintRight_toRightOf="@id/home_recycler_img"
        app:layout_constraintTop_toBottomOf="@id/home_recycler_img"
        android:textColor="#EA2011"
        android:text="123.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

     <TextView
        android:id="@+id/home_recycler_title"
        app:layout_constraintLeft_toLeftOf="@id/home_recycler_img"
        app:layout_constraintRight_toRightOf="@id/home_recycler_img"
        app:layout_constraintTop_toBottomOf="@id/home_recycler_text"
        android:textColor="#D9D9D9"
        android:text="$9999.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</androidx.constraintlayout.widget.ConstraintLayout>